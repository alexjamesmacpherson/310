<% provide(:title, "Users") %>
<h1>All Users</h1>

<%= will_paginate %>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, "/u/#{user.id}" %>
      <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure?" } %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
